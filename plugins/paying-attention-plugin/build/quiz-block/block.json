{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "paying-attention/quiz",
    "title": "Quiz: Are You Paying Attention?",
    "icon": "smiley",
    
    "attributes": {
        "question": {"type": "string"},
        "answers": {"type": "array", "default": [""]},
        "correctAnswer": {"type": "number", "default": null},
        "bgColor": {"type": "string", "default": "#EBEBEB"},
        "alignment": {"type": "string", "default": "left"}
    },

    "editorScript": "file:../../build/quiz.js",
    "editorStyle": "file:../../build/quiz.css",
    "style": "file:../../build/quiz-render.css",

    "example": {
        "attributes": {
            "question": "What is my name?",
            "correctAnswer": 3,
            "answers": ["Meowsalot", "Barksalot", "Purrsloud", "Brad"],
            "alignment": "center",
            "bgColor": "CFE8F1"
        }
    }
}